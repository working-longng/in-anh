            <label data-class="title_about_us_i" for="select_image_about_us"><img style="width:100%" src="~/img/homebg2.jpg" alt=""></label>
        </div>
    </div>


    <form id="formimage" class="container image-cointainer hidden">
        <select class=" image-size-select w-25 form-select" aria-label="Default select example">
            <option value="-1" selected>@lang?.ChooseSize</option>
            @{
                <option value="0">4x6</option>
                <option value="1">6x9</option>
                <option value="2">9x12</option>
                <option value="3">10x15</option>
                <option value="4">13x18</option>
                <option value="5">15x21</option>
                <option value="6">20x30 (~A4)</option>
            }
        </select>
    </form>
</div>
<button onclick="return uploader.handdleClickPrint()" id="md-print" type="button" class="hidden pt-3 pb-3 ps-4 pe-4 position-fixed mb-5 bottom-0 start-50 translate-middle-x btn btn-primary btn-lg">@lang?.Print @lang?.All <span></span> @lang?.Image </button>

<div class=" modal fade mt-30 " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">In Ảnh</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="row g-3 needs-validation" novalidate>
                    <div class="col-md-6">

                        <input required type="text" placeholder="@lang?.Name*" class="form-control" id="namesm" />
                    </div>
                    <div class="col-md-6">

                        <input type="tel" placeholder="@lang?.Phone*" class="form-control" id="phonesm">
                    </div>
                    <div class="col-12">

                        <input type="text" class="form-control" id="addresssm" placeholder="@lang?.Address*" />
                    </div>


                    <div class="col-md-12">

                        <textarea title="" type="text" class="form-control" id="notesm" placeholder="@lang?.Note"></textarea>
                    </div>


                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button onclick="return uploader.uploadDAllImage()" type="button" class="button-print-all btn btn-primary btnsm-all">@lang?.Print <span></span> @lang?.Image</button>
            </div>
        </div>
    </div>
</div>

<div class="position-fixed end-0 top-0 p-3" style="z-index:2">
    <div id="mytoast" data-isshow="false" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            @* <img src="..." class="rounded me-2" alt="..."> *@
            <strong class="me-auto">Thành công</strong>
            <small>1 giây trước</small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            Tải ảnh lên thành công
        </div>
    </div>
</div>
